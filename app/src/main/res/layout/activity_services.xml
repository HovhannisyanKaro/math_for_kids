<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_services"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/one"
    tools:context="com.example.lenovo.math.ServicesActivity">


    <ImageView
        android:id="@+id/iv_cloud"
        android:layout_margin="48dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/cloud_without_shadow"
        android:layout_width="56dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_exercise"
        android:layout_marginTop="64dp"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/MyTextViewAnswer"
        android:id="@+id/answero_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="133dp" />

    <TextView
        style="@style/MyTextViewAnswer"
        android:id="@+id/answer_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="90dp"/>

    <TextView
        style="@style/MyTextViewAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="280dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/answer_2" />

    <TextView
        style="@style/MyTextViewAnswer"
        android:id="@+id/answer_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="430dp"
        android:layout_marginLeft="230dp"/>

    <ImageView
        android:layout_marginLeft="36dp"
        android:id="@+id/iv_ballon"
        android:layout_marginBottom="-220dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="36dp"
        android:id="@+id/iv_ballon_2"
        android:layout_marginBottom="-300dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_ballon_1"
        android:layout_marginBottom="-90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:visibility="invisible"
        android:onClick="getRandomClick"
        android:text="try"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/answero_4"
        android:layout_alignStart="@+id/answero_4"
        android:id="@+id/button" />


</RelativeLayout>
